{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["src"],
  "exclude": ["node_modules"],
  "paths": {
    "@entity/*": ["model/entity/*"],
    "@model/*": ["model/database/sequelize/*"],
    "@repo/*": ["repository/*"],
    "@repo-if/*": ["model/interfaces/repository/*"],
    "@usecase/*": ["usecases/*"],
    "@utils/*": ["utils/*"]
  }
}
